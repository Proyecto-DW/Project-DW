@model IEnumerable<appbeneficiencia.Models.Puesto>

@{
    ViewData["Title"] = "Puesto";
}

<h1>Registro Puesto</h1>

<p>
    <style>
        .btn-no-underline {
            text-decoration: none;
        }
    </style>

    <button type="button" class="btn btn-outline-info">
        <a asp-action="Create" class="btn-no-underline"> Nuevo Registro </a>
    </button>
    
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="custom-nombre-Puesto">
                    Puesto
                </th>
                <th class="custom-fecha-creacion">
                    Fecha de Creación
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePuesto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>