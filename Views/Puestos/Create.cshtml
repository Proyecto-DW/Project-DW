@model appbeneficiencia.Models.Puesto
<!--Vista crear puestos-->
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Crear nuevo Puesto</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombrePuesto" class="control-label"></label>
                    <input asp-for="NombrePuesto" class="form-control" />
                    <span asp-validation-for="NombrePuesto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCreacion" class="control-label"></label>
                    <input asp-for="FechaCreacion" class="form-control" type="date"/>
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between mt-3">
                    <input type="submit" value="Crear" class="btn btn-primary mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
