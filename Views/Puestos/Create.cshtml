@model appbeneficiencia.Models.Puesto

@{
    ViewData["Title"] = "Crear Puesto";
}

<h4>Puesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePuesto" class="control-label"></label>
                <input asp-for="NombrePuesto" class="form-control" />
                <span asp-validation-for="NombrePuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <style>
                    .btn-no-underline {
                        text-decoration: none;
                    }
                </style>

                <button type="button" class="btn btn-outline-info">
                    <a asp-action="Index" class="btn-no-underline"> Regresar </a>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
