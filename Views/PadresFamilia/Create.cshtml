@model appbeneficiencia.Models.PadresDeFamilium

@{
    ViewData["Title"] = "Crear PadreFamilia";
}

<h1>Nuevo Registro</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dpipadre" class="control-label"></label>
                <input asp-for="Dpipadre" class="form-control inputmask" data-inputmask="'mask': '9999999999999'" />
                <span asp-validation-for="Dpipadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompletoPadre" class="control-label"></label>
                <input asp-for="NombreCompletoPadre" class="form-control" />
                <span asp-validation-for="NombreCompletoPadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoPadre" class="control-label"></label>
                <input asp-for="TelefonoPadre" class="form-control inputmask" data-inputmask="'mask': '99999999'" />
                <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dpimadre" class="control-label"></label>
                <input asp-for="Dpimadre" class="form-control inputmask" data-inputmask="'mask': '9999999999999'" />
                <span asp-validation-for="Dpimadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompletoMadre" class="control-label"></label>
                <input asp-for="NombreCompletoMadre" class="form-control" />
                <span asp-validation-for="NombreCompletoMadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoMadre" class="control-label"></label>
                <input asp-for="TelefonoMadre" class="form-control inputmask" data-inputmask="'mask': '99999999'" />
                <span asp-validation-for="TelefonoMadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionPrincipal" class="control-label"></label>
                <input asp-for="DireccionPrincipal" class="form-control" />
                <span asp-validation-for="DireccionPrincipal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionSecundaria" class="control-label"></label>
                <input asp-for="DireccionSecundaria" class="form-control" />
                <span asp-validation-for="DireccionSecundaria" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <style>
                    .btn-no-underline {
                        text-decoration: none;
                    }
                </style>

                <button type="button" class="btn btn-outline-info">
                    <a asp-action="Index" class="btn-no-underline"> Regresar </a>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.inputmask').inputmask();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
