@model appbeneficiencia.Models.Beneficio

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Crear Beneficio</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DetalleBeneficio" class="control-label">Detalle Beneficio</label>
                    <input asp-for="DetalleBeneficio" class="form-control" />
                    <span asp-validation-for="DetalleBeneficio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Soporte" class="control-label">Código Soporte</label>
                    <input asp-for="Soporte" class="form-control" />
                    <span asp-validation-for="Soporte" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdPatrocinador" class="control-label">Codigo Referencia</label>
                    <select asp-for="IdPatrocinador" class="form-control" asp-items="ViewBag.IdPatrocinador"></select>
                </div>

                <div class="form-group mb-5">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </div>
            </form>
        </div>
    </div>

    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
