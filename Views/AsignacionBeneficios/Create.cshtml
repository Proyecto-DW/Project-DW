@model appbeneficiencia.Models.AsignacionBeneficio

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-4">
    <h1 class="mb-4">Crear Asignación de Beneficio</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>

                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdBeneficiario" class="control-label">Beneficiario</label>
                            <select asp-for="IdBeneficiario" class="form-control" asp-items="ViewBag.IdBeneficiario">
                                <option value="">Seleccionar</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="IdBeneficio" class="control-label">Beneficio</label>
                            <select asp-for="IdBeneficio" class="form-control" asp-items="ViewBag.IdBeneficio">
                                <option value="">Seleccionar</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="DescripcionBeneficio" class="control-label">Descripción</label>
                            <input asp-for="DescripcionBeneficio" class="form-control" />
                            <span asp-validation-for="DescripcionBeneficio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FechaAsignacion" class="control-label">Fecha de Asignación</label>
                            <input asp-for="FechaAsignacion" class="form-control" />
                            <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Monto" class="control-label">Monto</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Q.</span>
                                </div>
                                <input asp-for="Monto" class="form-control" type="number" step="any" />
                                <span asp-validation-for="Monto" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Dpi" class="control-label">DPI</label>
                            <input asp-for="Dpi" class="form-control inputmask" data-inputmask="'mask': '9999-99999-9999'" />
                            <span asp-validation-for="Dpi" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Parentesco" class="control-label">Parentesco</label>
                            <input asp-for="Parentesco" class="form-control" />
                            <span asp-validation-for="Parentesco" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comentarios" class="control-label">Comentarios</label>
                            <textarea asp-for="Comentarios" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Comentarios" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Crear</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.inputmask').inputmask();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
