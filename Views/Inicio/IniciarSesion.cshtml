@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/stylelogin.css" /> <!-- Reemplaza "ruta/a/tu/estilos.css" con la ubicación real del archivo CSS -->
</head>
<body>

    <div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card transparent-card">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center">
                        <img src="/theme/dist/img/CDI.png" alt="Imagen de perfil" class="img-fluid" style="max-width: auto; height: auto;" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-header">
                            Iniciar Sesión
                        </div>
                        <div class="card-body">
                            <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                                <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                                <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                                <div class="d-grid gap-2 mb-3">
                                    <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                                </div>
                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="form-group">
                                        <div class="alert alert-danger" role="alert">
                                            @ViewData["Mensaje"]
                                        </div>
                                    </div>
                                }
                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


