@model appbeneficiencia.Models.Beneficiario

@{
    ViewData["Title"] = "Eliminar Beneficiario";
}

<div class="container mt-5">
    <h1>Eliminar Beneficiario</h1>

    <div class="card">
        <div class="card-body">
            <h3>¿Está seguro de eliminar al Beneficiario?</h3>

            <div class="row">
                <div class="col-md-6">
                    <h4>Detalles del Beneficiario</h4>
                    <hr />
                    <dl class="row">
                        <!-- Detalles del Beneficiario -->
                        <dt class="col-sm-5">Nombre Completo:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.NombreCompleto)</dd>

                        <dt class="col-sm-5">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                        <dt class="col-sm-5">Edad:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Edad)</dd>

                        <dt class="col-sm-5">Género:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Genero)</dd>

                        <dt class="col-sm-5">Dirección:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-5">Teléfono Beneficiario:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TelefonoBeneficiario)</dd>

                        <dt class="col-sm-5">Código Beneficiario:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.CodigoBeneficiario)</dd>

                        <dt class="col-sm-5">Nivel:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Nivel)</dd>

                        <dt class="col-sm-5">Estado:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Estado)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4>Detalles de los Padres</h4>
                    <hr />
                    <dl class="row">
                        <!-- Detalles del Padre -->
                        <dt class="col-sm-5">Nombre del Padre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.NombrePadre)</dd>

                        <dt class="col-sm-5">DPI del Padre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Dpipadre)</dd>

                        <dt class="col-sm-5">Teléfono del Padre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TelefonoPadre)</dd>

                        <dt class="col-sm-5">Dirección del Padre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.DireccionPadre)</dd>

                        <dt class="col-sm-5">Nombre de la Madre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.NombreMadre)</dd>

                        <dt class="col-sm-5">DPI de la Madre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Dpimadre)</dd>

                        <dt class="col-sm-5">Teléfono de la Madre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TelefonoMadre)</dd>

                        <dt class="col-sm-5">Dirección de la Madre:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.DireccionMadre)</dd>

                        <dt class="col-sm-5">Teléfono Principal:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TelefonoPrincipal)</dd>

                        <dt class="col-sm-5">Teléfono Secundario:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TelefonoSecundario)</dd>

                        <dt class="col-sm-5">Colaborador:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.IdColaboradorNavigation.IdColaborador)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdBeneficiario" />
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
