@model appbeneficiencia.Models.Beneficiario

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Actualizar Beneficiarios</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Beneficiarios</h4>
                <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBeneficiario" />

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Campos para Beneficiario -->
                            <div class="form-group">
                                <label for="NombreCompleto" class="control-label">Nombre Completo</label>
                                <input asp-for="NombreCompleto" class="form-control" />
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Edad" class="control-label">Edad</label>
                                <input asp-for="Edad" class="form-control" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Genero" class="control-label">Género</label>
                                <select asp-for="Genero" class="form-control">
                                    <option value="">Seleccionar</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select>
                                <span asp-validation-for="Genero" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Direccion" class="control-label">Dirección</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="TelefonoBeneficiario" class="control-label">Teléfono del Beneficiario</label>
                                <input asp-for="TelefonoBeneficiario" class="form-control inputmask" data-inputmask="'mask': '9999-9999'" />
                                <span asp-validation-for="TelefonoBeneficiario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="CodigoBeneficiario" class="control-label">Código del Beneficiario</label>
                                <input asp-for="CodigoBeneficiario" class="form-control" />
                                <span asp-validation-for="CodigoBeneficiario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Nivel" class="control-label">Nivel</label>
                                <input asp-for="Nivel" class="form-control" />
                                <span asp-validation-for="Nivel" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Padre</h5>
                                    <hr />
                                    <div class="form-group">
                                        <label for="NombrePadre" class="control-label">Nombre del Padre</label>
                                        <input asp-for="NombrePadre" class="form-control" />
                                        <span asp-validation-for="NombrePadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Dpipadre" class="control-label">DPI del Padre</label>
                                        <input asp-for="Dpipadre" class="form-control inputmask" data-inputmask="'mask': '9999-99999-9999'" />
                                        <span asp-validation-for="Dpipadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="TelefonoPadre" class="control-label">Teléfono del Padre</label>
                                        <input asp-for="TelefonoPadre" class="form-control inputmask" data-inputmask="'mask': '9999-9999'" />
                                        <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="DireccionPadre" class="control-label">Dirección del Padre</label>
                                        <input asp-for="DireccionPadre" class="form-control" />
                                        <span asp-validation-for="DireccionPadre" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h5 class="card-title">Madre</h5>
                                    <hr />
                                    <div class="form-group">
                                        <label for="NombreMadre" class="control-label">Nombre de la Madre</label>
                                        <input asp-for="NombreMadre" class="form-control" />
                                        <span asp-validation-for="NombreMadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Dpimadre" class="control-label">DPI de la Madre</label>
                                        <input asp-for="Dpimadre" class="form-control inputmask" data-inputmask="'mask': '9999-99999-9999'" />
                                        <span asp-validation-for="Dpimadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="TelefonoMadre" class="control-label">Teléfono de la Madre</label>
                                        <input asp-for="TelefonoMadre" class="form-control inputmask" data-inputmask="'mask': '9999-9999'" />
                                        <span asp-validation-for="TelefonoMadre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="DireccionMadre" class="control-label">Dirección de la Madre</label>
                                        <input asp-for="DireccionMadre" class="form-control" />
                                        <span asp-validation-for="DireccionMadre" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="TelefonoPrincipal" class="control-label">Teléfono Principal</label>
                        <input asp-for="TelefonoPrincipal" class="form-control inputmask" data-inputmask="'mask': '9999-9999'" />
                        <span asp-validation-for="TelefonoPrincipal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TelefonoSecundario" class="control-label">Teléfono Secundario</label>
                        <input asp-for="TelefonoSecundario" class="form-control inputmask" data-inputmask="'mask': '9999-9999'" />
                        <span asp-validation-for="TelefonoSecundario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="IdColaborador" class="control-label">ID de Colaborador</label>
                        <select asp-for="IdColaborador" class="form-control" asp-items="ViewBag.IdColaborador"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label">Estado</label>
                        <select asp-for="Estado" class="form-control">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.inputmask').inputmask();
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}