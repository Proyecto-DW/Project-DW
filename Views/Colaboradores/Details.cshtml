@model appbeneficiencia.Models.Colaboradore
@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Detalles del Colaborador</h4>
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NombreCompleto)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Profesion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Profesion)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Dpi)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Dpi)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Correo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Correo)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FechaNacimiento)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Genero)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Genero)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.IdPuestoNavigation)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IdPuestoNavigation.IdPuesto)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdColaborador" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>
